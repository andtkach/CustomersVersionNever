				{
					"name": "r03-GetInstitutionByIdAsAdmin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"pm.test(\"Body contains id\", function () {\r",
									"    pm.expect(pm.response.text()).to.include(\"id\");\r",
									"});\r",
									"pm.test(\"Institution id is not empty\", function () {\r",
									"    var jsonData = pm.response.json();\r",
									"    pm.expect(jsonData.id).to.not.be.empty;\r",
									"    \r",
									"    pm.expect(jsonData.id).to.be.equal(pm.collectionVariables.get(\"institutionId\"));\r",
									"    pm.expect(jsonData.name).to.be.equal(pm.collectionVariables.get(\"institutionName\"));\r",
									"    pm.expect(jsonData.description).to.be.equal(pm.collectionVariables.get(\"institutionDescription\"));    \r",
									"});\r",
									"\r",
									"\r",
									""
