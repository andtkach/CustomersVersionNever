	"item": [
		{
			"name": "f01-Auth",
			"item": [
				{
					"name": "r01-LoginAsAdmin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"pm.test(\"Body contains token\", function () {",
									"    pm.expect(pm.response.text()).to.include(\"token\");",
									"});",
									"pm.test(\"Token is not empty\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.token).to.not.be.empty;",
									"",
									"    pm.collectionVariables.set(\"adminId\", jsonData.id);",
									"    pm.collectionVariables.set(\"adminToken\", jsonData.token);",
									"});",
									"",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n\t\"email\": \"admin@email.com\",\r\n\t\"password\": \"Admin123!\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{AuthApiUrl}}/login",
							"host": [
								"{{AuthApiUrl}}"
							],
							"path": [
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "r05-UserInfo",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"pm.test(\"Body contains data\", function () {\r",
									"    pm.expect(pm.response.text()).to.include(\"aud\");\r",
									"    pm.expect(pm.response.text()).to.include(\"iss\");\r",
									"});\r",
									"pm.test(\"Check permissions\", function () {\r",
									"    var jsonData = pm.response.json();\r",
									"    pm.expect(jsonData.permission).to.not.be.empty;\r",
									"    pm.expect(jsonData.permission).to.be.equal(\"data:read\");    \r",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{userToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{AuthApiUrl}}/me",
							"host": [
								"{{AuthApiUrl}}"
							],
							"path": [
								"me"
							]
						}
					},
					"response": []
				}
			]
